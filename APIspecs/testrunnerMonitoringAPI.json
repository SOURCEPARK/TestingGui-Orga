{
   "openapi":"3.0.0",
   "info":{
      "title":"Testrunner Monitoring API",
      "version":"2.0.0"
   },
   "paths":{
      "/test-runner/heartbeat/{runnerId}":{
         "post":{
            "summary":"Heartbeat vom Testrunner empfangen",
            "parameters": [
               {
                  "name": "runnerId",
                  "in": "path",
                  "required": true,
                  "description": "Eindeutige ID des Testrunners.",
                  "schema": {
                     "type": "string"
               },
               "example": "f58419c4-ceb0-4e4a-a435-3a6142791f8e"
               }
            ],
            "requestBody": {
               "required": true,
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/Heartbeat"
                        }
                     }
                  }
            },
            "responses":{
               "200":{
                  "description":"Heartbeat empfangen"
               },
               "400":{
                  "description":"Ung端ltige Anfrage"
               }
            }
         }
      },
      "test-runner/register":{
         "post":{
            "summary":"Registrierung eines neuen Testrunners",
            "requestBody":{
               "required":true,
               "content":{
                  "application/json":{
                     "schema":{
                        "$ref":"#/components/schemas/RegisterRunner"
                     }
                  }
               }
            },
            "responses":{
               "200":{
                  "description":"Testrunner registriert"
               },
               "400":{
                  "description":"Ung端ltige Anfrage"
               }
            }
         }
      }
   },
   "components":{
      "schemas":{
         "Heartbeat":{
            "type":"object",
            "properties":{
               "timestamp":{
                  "type":"string",
                  "format":"date-time",
                  "description":"Zeitstempel des Heartbeats.",
                  "example":"2025-05-09T10:25:00Z"
               },
               "status":{
                  "type":"string",
                  "enum":[
                     "RUNNING",
                     "IDLE",
                     "ERROR"
                  ],
                  "description":"Aktueller Status des Testrunners.",
                  "example":"RUNNING"
               },
               "sequence":{
                  "type":"integer",
                  "example":101
               },
               "uptimeSeconds":{
                  "type":"integer",
                  "description":"Laufzeit des Testrunners in Sekunden.",
                  "example":3600
               },
               "testRunId": {
                  "type": "string",
                  "description": "Eindeutige ID des laufenden oder abgeschlossenen Tests.",
                  "example": "run-2025-05-09-001"
               },
               "testName": {
                  "type": "string",
                  "description": "Name des Tests",
                  "example": "ExampleName"
               },
               "testStatus": {
                  "type": "string",
                  "enum": ["RUNNING", "PASSED", "FAILED", "SKIPPED", "PENDING", "UNREACHABLE"],
                  "description": "Status des laufenden oder letzten Tests.",
                  "example": "RUNNING"
               },
               "startTime": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Startzeit des Tests.",
                  "example": "2025-05-09T10:30:00Z"
               },
               "elapsedSeconds": {
                  "type": "integer",
                  "description": "Laufzeit f端r diesen Test in Sekunden.",
                  "example": 45
               },
               "progress": {
                  "type": "number",
                  "description": "Fortschritt des laufenden Tests in Dezimal",
                  "example": 0.5
               },
               "errorcode": {
                  "type": "string",
                  "description": "Art des Fehlers",
                  "example": "404"
               },
               "errortext": {
                  "type": "string",
                  "description": "Beschreibung des Fehlers",
                  "example": "Test nicht gefunden"
               },
               "message": {
                  "type": "string",
                  "description": "Letzte relevante Aktion oder Statusnachricht.",
                  "example": "Container deployment gestartet"
               },
               "report": {
                  "type": "string",
                  "description": "Abschlussbericht eines abgeschlossenen Tests"
               }
            }
         },
         "RegisterRunner":{
            "type":"object",
            "properties":{
               "runnerId":{
                  "type":"string",
                  "description":"Eindeutige ID des Testrunners.",
                  "example":"testrunner-01"
               },
               "url":{
                  "type":"string",
                  "format":"uri",
                  "description":"URL unter der der Testrunner erreichbar ist.",
                  "example":"http://localhost:8080"
               },
               "platforms":{
                  "type":"array",
                  "items":{
                     "type":"string"
                  },
                  "description":"Liste der unterst端tzten Plattformen.",
                  "example":[
                     "k8s",
                     "docker",
                     "vagrant"
                  ]
               }
            },
            "required":[
               "runnerId",
               "url",
               "platforms"
            ]
         }
      }
   }
}
